# Force HTTPS and WWW canonicalization
RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Force non-www
RewriteCond %{HTTP_HOST} ^www\.rightspend\.ai$ [NC]
RewriteRule ^(.*)$ https://rightspend.ai/$1 [R=301,L]

# Set security headers
Header always set X-Frame-Options DENY
Header always set X-Content-Type-Options nosniff
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Permissions-Policy "camera=(), microphone=(), geolocation=()"

# Cache control for SEO assets
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2)$">
    Header set Cache-Control "public, max-age=31536000"
</FilesMatch>

# Cache control for HTML files
<FilesMatch "\.(html|htm)$">
    Header set Cache-Control "public, max-age=3600, must-revalidate"
</FilesMatch>

# Sitemap and robots.txt cache
<FilesMatch "(robots\.txt|sitemap\.xml)$">
    Header set Cache-Control "public, max-age=86400"
</FilesMatch>

# Redirect old URLs to new structure
Redirect 301 /aws-cost-optimization-platform/ https://rightspend.ai/aws-cost-optimization.html
Redirect 301 /commitment-free-discounts-cfd/ https://rightspend.ai/commitment-free-discounts.html
Redirect 301 /rightspend-vs-reserved-instances/ https://rightspend.ai/blog/aws-reserved-instances-vs-savings-plans-2024.html

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>