{
  "name": "rightspend-landing",
  "version": "2.0.0",
  "description": "RightSpend multi-page website",
  "scripts": {
    "dev": "npm-run-all --parallel watch:css serve",
    "build": "npm-run-all build:css",
    "watch:css": "tailwindcss -i ./src/styles/input.css -o ./dist/css/styles.css --watch",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./dist/css/styles.css --minify",
    "serve": "live-server --port=3000 --no-browser"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  }
}
