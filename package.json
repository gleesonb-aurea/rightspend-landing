{
  "name": "rightspend-landing",
  "version": "2.0.0",
  "description": "RightSpend multi-page website",
  "scripts": {
    "dev": "npm-run-all --parallel watch:css serve",
    "build": "npm-run-all clean mkdir build:css build:copy fix-paths",
    "fix-paths": "node fix-paths.js",
    "watch:css": "tailwindcss -i ./src/styles/input.css -o ./dist/css/styles.css --watch",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./dist/css/styles.css --minify",
    "build:copy": "npm-run-all copy:*",
    "copy:root": "copyfiles index.html dist/",
    "copy:pages": "copyfiles -u 2 \"src/pages/**/*.html\" dist",
    "copy:components": "copyfiles -u 2 \"src/components/**/*.html\" dist",
    "copy:images": "copyfiles -u 2 \"src/assets/**/*\" dist",
    "copy:scripts": "copyfiles -u 2 \"src/scripts/**/*\" dist",
    "clean": "rimraf \"./dist\"",
    "mkdir": "mkdirp dist/css",
    "serve": "node server.js"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "copyfiles": "^2.4.1",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "express": "^4.21.2"
  }
}
